<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodListActivity"
android:id="@+id/foodListContainer">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:id="@+id/container"
                  android:layout_height="match_parent" android:layout_alignBottom="@+id/typeSearch"
                  android:layout_marginBottom="-456dp">
    </LinearLayout>

    <EditText android:layout_width="297dp"
              android:layout_height="wrap_content"
              android:id="@+id/typeSearch"
              android:layout_toLeftOf="@+id/pressSearch"
              android:hint="Search any food item..." android:layout_marginRight="-4dp"
              android:layout_marginBottom="-46dp"
              android:layout_below="@+id/progressBar"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pressSearch"
            android:text="Search"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp" android:textSize="14sp"
            android:layout_below="@+id/progressBar"/>
    <Button
            android:text="Add to Favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="116dp" android:id="@+id/favourites"
            android:layout_alignParentBottom="true"/>
    <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:id="@+id/progressBar" android:layout_alignParentStart="true"
            android:layout_marginStart="0dp" android:visibility="invisible" android:layout_marginTop="0dp"
            android:layout_alignParentTop="true"
            android:min="0"
            android:max="100"/>


</RelativeLayout>