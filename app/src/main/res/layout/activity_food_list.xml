<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodListActivity"
android:id="@+id/foodListContainer">

    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:id="@+id/container"
                  android:layout_height="match_parent" android:layout_alignBottom="@+id/typeSearch"
                  android:layout_marginBottom="-459dp"></LinearLayout>

    <EditText android:layout_width="297dp"
              android:layout_height="wrap_content"
              android:id="@+id/typeSearch"
              android:layout_toLeftOf="@+id/pressSearch"
              android:hint="Search any food item..." android:layout_marginRight="-1dp"
              android:layout_alignBottom="@+id/pressSearch" android:layout_marginBottom="-3dp"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pressSearch"
            android:text="Search"
            android:layout_alignParentEnd="true" android:layout_marginTop="0dp" android:layout_alignParentTop="true"
            android:layout_marginEnd="0dp" android:textSize="14sp"/>
    <Button
            android:text="Add to Favourites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignParentStart="true"
            android:layout_marginStart="110dp" android:layout_alignParentBottom="true" android:id="@+id/favourites"/>


</RelativeLayout>