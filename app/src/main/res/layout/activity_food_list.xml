<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".FoodListActivity">

    <EditText android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/typeSearch"
              android:layout_toLeftOf="@+id/pressSearch"
              android:hint="Search"/>

    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pressSearch"
            android:text="Search"
            android:layout_alignParentEnd="true"/>

    <ListView android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/FoodView"
              android:layout_below="@+id/typeSearch" android:layout_alignParentStart="true"
              android:layout_marginTop="-1dp"></ListView>

</RelativeLayout>