<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".SearchFragment"
                android:id="@+id/detailFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/searchFragment"
            android:layout_alignParentStart="true" android:layout_marginTop="42dp"
            android:layout_marginStart="0dp"

            android:textSize="24sp" android:textAlignment="center" android:layout_below="@+id/details"/>
    <TextView android:layout_width="match_parent" android:id="@+id/fatContent" android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_marginTop="42dp" android:layout_marginStart="0dp" android:textSize="24sp"
              android:textAlignment="center" android:layout_below="@+id/searchFragment"
    />
    <TextView android:layout_width="match_parent" android:id="@+id/calorieContent" android:layout_height="wrap_content"
              android:layout_alignParentStart="true"
              android:layout_marginStart="0dp" android:textSize="24sp"
              android:textAlignment="center" android:layout_marginTop="42dp" android:layout_below="@+id/fatContent"/>
    <TextView
            android:text="Food Details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true" android:id="@+id/details" android:layout_marginTop="60dp"
            android:textSize="30sp" android:textStyle="bold"/>
</RelativeLayout>