<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
        android:descendantFocusability="blocksDescendants"
>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" tools:layout_editor_absoluteY="16dp"
            tools:layout_editor_absoluteX="57dp" android:id="@+id/food_item_name"/>
    <Button
            android:text="Delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/delete_button" android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:focusableInTouchMode="true"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_item_fat" android:layout_alignParentStart="true"
            android:layout_below="@+id/food_item_calories"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/food_item_calories" android:layout_alignParentStart="true"
            android:layout_below="@+id/food_item_name"/>
</RelativeLayout>